<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Back", tasks_path, class:"btn btn-dark" %>
<%= link_to "Edit", edit_task_path, class:"btn btn-dark" %>
<%= link_to "Delete", delete_task_path(@task), class:"btn btn-danger",
    method: :delete,
    data: {confirm: "Are you sure you want to delete this task?"} %>
